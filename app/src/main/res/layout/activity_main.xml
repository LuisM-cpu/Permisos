<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/botonCamara"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/camara"
        android:src="@drawable/camara"/>

    <ImageButton
        android:id="@+id/botonContactos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/contactos"
        android:src="@drawable/contactos"/>

    <ImageButton
        android:id="@+id/botonMapa"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/mapa"
        android:src="@drawable/mapa"/>
</LinearLayout>